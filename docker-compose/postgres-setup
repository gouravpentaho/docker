version: '3.3'
services:
  db:
    container_name: postgres_db
    image: postgres:9.5
    restart: always
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: password
      POSTGRES_DB: test_db
      PGDATA: /pgdata
    ports:
      - "5432:5432"
    volumes:
      - /home/devuser/pentaho:/home/devuser/pentaho
      - /pgdata:/pgdata
  pentaho:
    container_name: pentaho_server
    image: pentaho-9.2
    restart: always
    ports:
      - "8080:8080"
    volumes:
      - /home/devuser/pentaho:/home/devuser/pentaho
  pgadmin:
    container_name: pgadmin4_container
    image: dpage/pgadmin4:4
    restart: always
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@admin.com
      PGADMIN_DEFAULT_PASSWORD: password
    ports:
      - "5050:80"